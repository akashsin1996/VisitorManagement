<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/io"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.DashboardFragment">

    <TextView
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:text="Date"
    android:textStyle="bold"
    android:textSize="33sp"
    android:textColor="#FF1C57"
    android:layout_marginLeft="22dp"
    />

    <TextView
        android:id="@+id/tv_date"
        android:layout_marginTop="08dp"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="193dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/date"
        android:hint="Select Date..."
        android:textColor="#627064"
        android:textColorHint="#2C1C57"
        android:textSize="20sp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/io"
        android:layout_marginTop="119dp"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/lin1"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="63dp"
        android:background="@drawable/header"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Visitor Name"
            android:textColor="#fff"
            android:layout_weight="1"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Whom to meet"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Entry time"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_weight="1"
            />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Exit time"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_weight="1"
            />


    </LinearLayout>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Visitors found"
        android:textSize="23sp"
        android:textColor="#EB2525"
        android:id="@+id/tv_visitor_user"
        tools:visibility="visible"
        android:visibility="gone"
        android:layout_centerInParent="true"/>











</RelativeLayout>