    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/io">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" System Users Details "
                android:textColor="#2C1C57"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="25sp"
                />


            <!--    <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:hint="ConfirmPassword"
                        android:singleLine="true"
                        android:textColor="#A73D3D" />

                </android.support.design.widget.TextInputLayout>-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="username"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"

                android:textColor="#2C1C57" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="Username"
                android:capitalize="words"
                android:singleLine="true"
                android:textSize="14sp"
                android:background="@drawable/btn_white"
                android:id="@+id/et_username"
                android:textColor="#3E4755" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Role"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"

                android:textColor="#2C1C57" />

            <RadioGroup
                android:id="@+id/role_radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="35dp"
                android:textColor="#627064">

                <RadioButton
                    android:id="@+id/radio_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin"
                    android:textColor="#3E4755" />

                <RadioButton
                    android:id="@+id/radio_operator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Operator"
                    android:textColor="#3E4755" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="firstname"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:textColor="#2C1C57" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="First Name"
                android:textSize="14sp"
                android:singleLine="true"
                android:capitalize="words"
                android:id="@+id/et_firstname"
                android:background="@drawable/btn_white"
                android:textColor="#3E4755" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="lastname"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:textColor="#2C1C57" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:capitalize="words"
                android:background="@drawable/btn_white"
                android:hint="Last Name"
                android:singleLine="true"
                android:textSize="14sp"
                android:id="@+id/et_lastname"
                android:textColor="#3E4755" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:layout_marginLeft="30dp"
                    android:textColor="#2C1C57"
                    />

                <RadioGroup
                    android:id="@+id/gender_radiogroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#627064"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#3E4755"
                        android:text="Male"/>

                    <RadioButton
                        android:id="@+id/radio_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#3E4755"
                        android:text="Female"/>

                </RadioGroup>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Email id"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:textColor="#2C1C57" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="30dp"
                android:singleLine="true"
                android:capitalize="words"
                android:layout_marginRight="30dp"
                android:background="@drawable/btn_white"
                android:hint="Email id"
                android:textSize="14sp"
                android:id="@+id/et_email"
                android:textColor="#3E4755" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="confirm email id"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:textColor="#2C1C57" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="Confirm Email id"
                android:textSize="14sp"
                android:capitalize="words"
                android:singleLine="true"
                android:background="@drawable/btn_white"
                android:id="@+id/et_cemail"
                android:textColor="#3E4755" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="contact number"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:textColor="#2C1C57" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="Contact Number"
                android:capitalize="words"
                android:background="@drawable/btn_white"
                android:id="@+id/et_mob"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="14sp"
                android:textColor="#3E4755" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="city"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:textColor="#2C1C57" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="City"
                android:capitalize="words"
                android:singleLine="true"
                android:id="@+id/et_city"
                android:textSize="14sp"
                android:background="@drawable/btn_white"
                android:textColor="#3E4755" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="password"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:textColor="#2C1C57" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="Password"
                android:capitalize="words"
                android:singleLine="true"
                android:id="@+id/et_psw"
                android:textSize="14sp"
                android:background="@drawable/btn_white"
                android:textColor="#3E4755" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="confirm password"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:textColor="#2C1C57" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="ConfirmPassword"
                android:background="@drawable/btn_white"
                android:id="@+id/et_cpsw"
                android:capitalize="words"
                android:textSize="14sp"
                android:singleLine="true"
                android:textColor="#3E4755" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="upload profile pic"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/btn_white"
                android:layout_marginTop="20dp"
                android:id="@+id/btn_upload"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                tools:visibility="gone"
                android:id="@+id/img_upload_preview" />



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="Update Profile"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:id="@+id/btn_update"
                android:layout_marginBottom="40dp"
                android:background="@drawable/btn_2"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>