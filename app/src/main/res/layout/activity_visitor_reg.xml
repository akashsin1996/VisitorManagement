<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/io"
    tools:context=".Activities.VisitorRegActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">



        <!--android:background="?attr/colorPrimary"-->//use for header color

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"
            android:background="@drawable/header"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="@string/app_name">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
       <!-- <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add visitor "
            android:textColor="#3C5869"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="25sp"
            />-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="fill the contact number"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:textColor="#2C1C57" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="30dp"
            android:singleLine="true"
            android:inputType="number"
            android:layout_marginRight="30dp"
            android:hint="Mobile Number"
            android:textSize="14sp"
            android:id="@+id/et_check_mob"
            android:background="@drawable/btn_white"
            android:textColor="#3E4755" />

        <Button
            android:id="@+id/btn_available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/btn_4"
            android:text="check availability "
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="14sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Visitor Informatiion"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginRight="30dp"
            android:textColor="#2C1C57" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="firstname"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:textColor="#2C1C57" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="30dp"
            android:singleLine="true"
            android:layout_marginRight="30dp"
            android:hint="First Name"
            android:textSize="14sp"
            android:capitalize="words"
           android:id="@+id/et_vfirstname"
            android:background="@drawable/btn_white"
            android:textColor="#3E4755" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="lastname"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:textColor="#2C1C57" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:singleLine="true"
            android:background="@drawable/btn_white"
            android:hint="Last Name"
            android:textSize="14sp"
            android:capitalize="words"
            android:id="@+id/et_vlastname"
            android:textColor="#3E4755" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:layout_marginLeft="30dp"
                android:textColor="#2C1C57"
                />

            <RadioGroup
                android:id="@+id/gender_radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#627064"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3E4755"
                    android:text="Male"/>

                <RadioButton
                    android:id="@+id/radio_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3E4755"
                    android:text="Female"/>

            </RadioGroup>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Email id"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:textColor="#2C1C57" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="30dp"
            android:singleLine="true"
            android:capitalize="words"
            android:layout_marginRight="30dp"
            android:background="@drawable/btn_white"
            android:hint="Email id"
            android:textSize="14sp"
            android:id="@+id/et_vemail"
            android:textColor="#3E4755" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="contact number"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:textColor="#2C1C57" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:singleLine="true"
            android:hint="Contact Number"
            android:inputType="number"
            android:textSize="14sp"
            android:background="@drawable/btn_white"
            android:id="@+id/et_vmob"
            android:textColor="#3E4755" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="city,Address"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:textColor="#2C1C57" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="City,Address"
            android:singleLine="true"
            android:capitalize="words"
            android:textSize="14sp"
          android:id="@+id/et_vcity"
            android:background="@drawable/btn_white"
            android:textColor="#3E4755" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="upload profile pic"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/btn_white"
            android:layout_marginTop="20dp"
            android:id="@+id/btn_upload"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            tools:visibility="gone"
            android:id="@+id/img_upload_preview" />





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/ll_add_visit"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Add Visitor "
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="14sp"
            android:layout_marginBottom="40dp"
           android:id="@+id/btn_visitadd"
            android:background="@drawable/btn_2"
            />

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/ll_otp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:text="Enter Otp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="#627064" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint=" Enter otp"
                android:singleLine="true"
                android:textSize="14sp"
                android:id="@+id/et_otp"
                android:background="@drawable/btn_white"
                android:textColor="#3E4755" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/ll_btn_verify"
        android:layout_marginTop="40dp"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Verify otp"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="14sp"
            android:layout_marginBottom="40dp"
            android:id="@+id/btn_otp_verify"
            android:background="@drawable/btn_2"
            />
    </LinearLayout>

    </LinearLayout>
    </ScrollView>

</LinearLayout>